            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
          >
            <label class="hidden">
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
            <div class="mb-6">
              <input
                name="email"
                type="email"
                required
                placeholder="Your Email"
                class="focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none"
              />
            </div>
            <div class="mb-6">
              <input
                name="username"
                type="text"
                placeholder="Your Name"
                class="focus:border-primary w-full rounded border py-3 px-[14px] text-base outline-none"
              />
            </div>
            <div class="mb-6">
              <textarea
                name="message"
                rows="8"
                placeholder="Your Message"
                class="focus:border-primary w-full resize-none rounded border py-3 px-[14px] text-base outline-none"
              ></textarea>
            </div>
            <div>
              <button
                type="submit"
                class="w-full p-3 text-white transition border rounded border-primary bg-primary hover:bg-opacity-90"
